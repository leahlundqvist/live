{
  "compilerOptions": {
    "jsx": "react",
    "lib": ["dom", "es2017"],
    "module": "commonjs",
    "outDir": "./build/",
    "preserveConstEnums": true,
    "esModuleInterop": true,
    "removeComments": true,
    "sourceMap": true,
    "target": "es6",
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  },
  "include": ["src/index.tsx"]
}
